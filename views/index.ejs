<!-- User Story Form Section
============================================= -->
<section id="contact">
    <div class="container">
        <h2>User Story</h2>
        <hr class="sep">
        <p>Create Your Story</p>
        <div class="col-md-6 col-md-offset-3 wow fadeInUp" data-wow-delay=".3s">
            <form method="POST" action="/profile">
                <div class="form-group">
                    <label for="Title">Title</label>
                    <input type="text" name="title" class="form-control" id="Title" placeholder="Story Title Example: [Persona name] should (not) be able to [overarching action]">
                </div>
                <div class="form-group">
                    <label for="GIVEN">GIVEN:</label>
                    <i class="fa fa-question-circle" aria-hidden="true" data-toggle="tooltip" data-placement="left" title="GIVEN is the necessary context and preconditions for story"></i>
                    <textarea name="given" class="form-control" rows="1" placeholder="that I’m a Connect 4 Player, I need to be able to play a game piece on the game board."></textarea>
                </div>
                <div class="form-group">
                    <textarea name="when" class="form-control" rows="1" placeholder="WHEN [action] Example: I click an empty game board space"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="and" class="form-control" rows="1" placeholder="Example: And it's my turn"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="then" class="form-control" rows="1" placeholder="THEN [reaction]"></textarea>
                </div>
                <input class="btn-block" type="submit" value="Create Story" >
            </form>
        </div>
    </div>
</section>
