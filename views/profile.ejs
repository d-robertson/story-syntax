<% console.log(story) %>
<div class="container">
  <div class="authform col-md-6 col-md-offset-3">
    <% story.forEach(function(story) { %>
      <div class="panel-group" id="accordion">
        <div class="panel panel-default" id="panel1">
          <div class="panel-heading">
            <h4 class="panel-title">
            <a data-toggle="collapse" data-target="#collapseOne"
              href="#collapseOne">
              <%= story.title %>
            </a>
            </h4>
          </div>
          <div id="collapseOne" class="panel-collapse collapse in">
            <div class="panel-body"><%= story.given %> <br>
              <%= story.when %> <br>
              <%= story.and  %> <br>
              <%= story.then %> <br>
              <div class="ud-button">
                <a class="btn btn-transparent edit-btn" href="/profile/edit/<%= story.id %>">Edit</a>
                <form action="/profile/delete/<%= story.id %>" method="DELETE" accept-charset="utf-8">
                <input class="btn btn-light delete-btn" type="submit" value="Delete">
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% }); %>
  </div>
</div>
